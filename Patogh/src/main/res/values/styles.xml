<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MainActoinbar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MainActoinbar</item>
    </style>

    <style name="MainActoinbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <style name="Punch">
        <item name="android:layout_margin">1dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">5sp</item>
    </style>

    <style name="PrimaryButton" parent="Button">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="MenuButton">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:background">@color/menu_button</item>
    </style>

    <style name="TitleH1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/h1</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">10sp</item>
    </style>

    <style name="P">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">3sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="DialogButton">
        <item name="android:background">@color/dialog_button</item>
        <item name="android:textColor">@color/dialog_button_text</item>
    </style>

    <style name="DialogButtonSecondary">
        <item name="android:background">@color/dialog_button_secondary</item>
        <item name="android:textColor">@color/dialog_button_text_secondary</item>
    </style>

</resources>
